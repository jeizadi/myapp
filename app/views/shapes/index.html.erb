<p id="notice"><%= notice %></p>

<h1>Listing Shapes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Svg width</th>
      <th>Svg height</th>
      <th>Cx</th>
      <th>Cy</th>
      <th>R</th>
      <th>Style</th>
      <th>Points</th>
      <th>Width</th>
      <th>Height</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shapes.each do |shape| %>
      <tr>
        <td><%= shape.name %></td>
        <td><%= shape.svg_width %></td>
        <td><%= shape.svg_height %></td>
        <td><%= shape.cx %></td>
        <td><%= shape.cy %></td>
        <td><%= shape.r %></td>
        <td><%= shape.style %></td>
        <td><%= shape.points %></td>
        <td><%= shape.width %></td>
        <td><%= shape.height %></td>
        <td>
        <svg height=<%= shape[:svg_height] %>  width=<%= shape[:svg_width] %> >

          <% if shape[:name] == 'star' or shape[:name] == 'triangle' then %>
            <polygon points=<%= shape[:points] %> 
          <% elsif shape[:name] == 'circle' then %>
            <circle cx=<%= shape[:cx] %> cy=<%= shape[:cy] %> r=<%= shape[:r] %>
          <% else %>
            <rect width=<%= shape[:width] %> height=<%= shape[:height] %>
          <% end %>

          style=<%= shape[:style] %> />
        </svg>
        </td>

        <td><%= link_to 'Show', shape %></td>
        <td><%= link_to 'Edit', edit_shape_path(shape) %></td>
        <td><%= link_to 'Destroy', shape, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

